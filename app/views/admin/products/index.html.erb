<div class="container text-center">
  <div class="row">
   <div class="product_title text-center"><h3>商品一覧</h3></div>
  </div>

  <div class="mx-5">
   <table class="table">
    <thead class="thead-light">
     <tr>
       <th scope="col">商品ID</th>
       <th scope="col">商品名</th>
       <th scope="col">店舗名</th>
       <th scope="col">税抜価格</th>
       <th scope="col">販売ステータス</th>
     </tr>
    </thead>
    <tbody>
     <div class="product-list">
       <% [@shop,@products].each do |shop,product| %>
         <tr>
           <th scope="row"><%= product.id %></th>
           <td><%= link_to product.name, admin_products_path(product) %></td>
           <td><%= link_to shop.shop_name, admin_shop_path(shop) %></td>
           <td><%= product.price %></td>
           <td><%= product.sales_status ? "販売中" : "販売停止" %></td>
         </tr>
       <% end %>
     </div>
    </tbody>
   </table>
    
  </div>
</div>
