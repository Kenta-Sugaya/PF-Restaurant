<% provide(:title, "会員一覧") %>
  <h2 class="head-line title_h2 text-center">
    <%= @user.last_name %><%= @user.first_name %>さんの会員詳細
  </h2>
  <div class="row">
  <div class="col-md-12">
    <div class="field text-center">
        <p>
          顧客ID<%= @user.id %>
          <% if @user.unsubscribe_status == true %>
            <span>　<i class="fas fa-bullseye blue"></i>退会済
          <% elsif @user.unsubscribe_status == false %>
            　<i class="fas fa-bullseye red"></i>有効会員</span>
          <% end %>
        </p>
    </div> 
    <div class="field text-center">
        <p>
          氏名:            <%= @user.last_name %><%= @user.first_name %>
        </p>
    </div>
    <div class="field text-center">
        <p>
          フリガナ:          <%= @user.last_name_kana %><%= @user.first_name_kana %>
        </p>
    </div>
    <div class="field text-center">
        <p>
          郵便番号:　　    <%= @user.postal_code %>
        </p>
    </div>
    <div class="field text-center">
        <p>
          住所:　　　　　  <%= @user.address %>
        </p>
    </div>
    <div class="field text-center">
        <p>
          電話番号:　　　  <%= @user.phone_number %>
        </p>
    </div>
    <div class="field text-center">
        <p>
          メールアドレス:　<%= @user.email%>
        </p>
    </div>
    <div class="actions text-center">
        <%= link_to "編集する",edit_admin_user_path(@user), class: "glyphicon glyphicon-pencil btn btn-success edit_shipping_addres_#{@user.id}" %>
    </div>
  </div> 
  </div> 