<div class="my-4 offset-1"><h3 class="page_title">商品編集</h3></div>
<div class="new-product-form col-8 mx-auto">
  <%= form_with model: @shop, url: admin_shop_path(@shop), local: true do |f| %>
    <dl>
      <dt><%= f.label :shop_image, "店舗画像", class: 'mr-5' %></dt>
      <dd><%= f.attachment_field :shop_image %></dd>
      <dt><%= f.label :shop_name, "店舗名", class: 'mr-5' %></dt>
      <dd><%= f.text_field :shop_name, placeholder: '店舗名', class: 'form-control col-7' %></dd>
      <dt><%= f.label :shop_introduction, "店舗説明", class: 'mr-5' %></dt>
      <dd><%= f.text_area :shop_introduction, placeholder: 'ここに説明文を記述します', rows: 5, class: 'form-control col-7' %></dd>
    </dl>
    
      <%= f.submit "変更を保存", class: 'btn btn-success col-3 offset-4' %>
  <% end %>
</div>