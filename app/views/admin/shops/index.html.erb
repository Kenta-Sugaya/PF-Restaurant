<div class="container">
  <div class="row">
      <div class="shop_title text-center"><h3>店舗一覧</h3></div>
      <%= link_to '', new_admin_shop_path, class: "fas fa-plus-circle fa-2x", style:"color:dimgray;" %>
  </div>
  <div class="mx-5">
   <table class="table">
    <thead class="thead-light">
     <tr>
       <th scope="col">店舗ID</th>
       <th scope="col">店舗名</th>
       <th scope="col">店舗紹介</th>
     </tr>
    </thead>
    <tbody>
     <div class="shop-list">
       <% @shops.each do |shop| %>
         <tr>
           <th scope="row"><%= shop.id %></th>
           <td><%= link_to shop.shop_name, admin_shop_path(shop) %></td>
           <td><%= shop.shop_introduction %></td>
         </tr>
       <% end %>
     </div>
    </tbody>
   </table>
    <%= paginate @shops %>
  </div>
</div>
</div>