<div class="my-4 offset-1"><h3 class="page_title">店舗新規登録</h3></div>
<div class="new-shop-form col-8 offset-2">
    <%= form_for(@shop, url: admin_shops_path(@shop), method: :post) do |f| %>
    <dl>
    　<dt><%= f.label :shop_name, "店舗名", class: 'mr-5' %></dt>
    　<dd><%= f.text_field :shop_name, placeholder: '店舗名', class: 'form-control col-7' %></dd>
      <dt><%= f.label :shop_image, "店舗画像", class: 'mr-5' %></dt>
      <dd><%= f.attachment_field :shop_image %></dd>
      <dt><%= f.label :shop_introduction, "店舗説明", class: 'mr-5' %></dt>
      <dd><%= f.text_area :shop_introduction, placeholder: 'お店のジャンルやコンセプト　住所やHPのリンクを記入してください', rows: 5, class: 'form-control col-7' %></dd>
    </dl>
    <%= f.submit "新規登録", class: 'btn btn-success btn-lg py-3 col-3 offset-4' %>
    <% end %>
</div>