<div class="container">
<div class="product_item">
<div class="product_item-overlay">
  　<h2>あなたの毎日をフレッシュに！<br></h2>
</div>
</div>
<div class="products_title text-center">
  <h3>すべてのメニュー</h3>
  <p>( 全<%= @products.count %>件 )</p>
</div>
  <div class="row">
    <% @products.each do |product| %>
    <% if product.sales_status == true %>
    <div class="col">
      <%= link_to public_product_path(product.id) do %>
        <span class="img_container">
        <div class="image-content"><%= attachment_image_tag product, :image, :fill, 200, 200, fallback: "no_image.jpg" %></div>

        </span>
      <% end %>
        <div class="font-weight-bold"><%= product.name %></div><br>
        <div class="font-weight-light mb-5"><%= product.sales_status ? "販売中" : "売り切れ" %></div>
        <div class="font-weight-light mb-5">¥<%= product.price %></div>
        <div class="font-weight-light mb-5">( いいね件数<%= product.favorites.count %>件 )</div>
    </div>
    <% else %>
    <div class="col">
        
        <div class="image-content"><%= attachment_image_tag @product, :image, :fill, 200, 200, fallback: "no_image.jpg" %></div>
        <div class="font-weight-bold"><%= product.name %></div><br>
        <div class="font-weight-light mb-5"><%= product.sales_status ? "販売中" : "売り切れ" %></div>
        <div class="font-weight-light mb-5">¥<%= product.price %></div>
    </div>
    <% end %>
    <% end %>
  </div>
</div>