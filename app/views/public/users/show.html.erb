<% provide(:title, "マイページ") %>
<div class="container">
  <h2 class="head_my_page title_h2 text-center">My Page</h2>
    <h3 class="subhead_my_page">登録情報</h3>
			
		  
		
		<table class="table table-condensed" >
		
		  <tbody>
		  	<tr>
		  	<td class="info">氏名</td>
		  	<td class="text-left"><%= current_user.last_name %><%= current_user.first_name %></td>
		  	</tr>
		  	<tr>
		  	<td class="info">カナ</td>
		  	<td class="text-left"><%= current_user.last_name_kana %><%= current_user.first_name_kana %></td>
		  	</tr>
		  	<tr>
		  	<td class="info">郵便番号</td>
		  	<td class="text-left"><%= current_user.postal_code %></td>
		  	</tr>
		  	<tr>
		  	<td class="info">住所</td>
		  	<td class="text-left"><%= current_user.address %></td>
		  	</tr>
		  	<tr>
		  	<td class="info">電話番号</td>
		  	<td class="text-left"><%= current_user.phone_number %></td>
		  	</tr>
		  	<tr>
		  	<td class="info">メールアドレス</td>
		  	<td class="text-left"><%= current_user.email %></td>
		  	</tr>
		  </tbody>
		</table>
		
		
      <div class="mypage-bottoms">
          <%= link_to "編集する", public_users_edit_path(current_user) , class: "glyphicon glyphicon-pencil btn btn-success" %>
				<P><strong class="shipping-link">配送先　</strong>
				
				</p>
				<p><strong class="order-link">注文履歴</strong>
				
				</p>
	  </div>
			
	</div>
</div>
